<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href='https://fonts.googleapis.com/css?family=Akronim' rel='stylesheet'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Personas dati", "PersonasDati", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Darba pieredze", "DarbaPieredze", "Home", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Izglītība", "Izglitiba", "Home", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Prasmes", "Prasmes", "Home", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Valodas", "Valodas", "Home", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Vaditāja apliecība", "VaditajaAplieciba", "Home", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Motivācijas vestule", "MotivacijasVestule", "Home", new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
